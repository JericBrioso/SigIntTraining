%matplotlib ipympl
import numpy as np
import matplotlib.pyplot as plt

# Parameters
amplitude = 0.5      # Amplitude of the sine wave
frequency = 200.0      # Frequency in Hz
phase = -3.1416/2            # Phase in radians
sampling_rate = 10000 # Samples per second
duration = 0.1       # Duration in seconds

# Time vector
t = np.linspace(0, duration, int(sampling_rate * duration), endpoint=False)

# Sinusoidal signal
signal = amplitude * np.sin(2 * np.pi * frequency * t + phase)

# Plotting
plt.figure(figsize=(14, 6))
plt.plot(t, signal)
plt.title("Sinusoidal Signal")

%matplotlib ipympl
import numpy as np
import matplotlib.pyplot as plt

# Parameters
amplitude = 0.5      # Amplitude of the sine wave
frequency = 100.0      # Frequency in Hz
phase0 = 0  #pi/2          # Phase in radians
phase1 = 3.1416/2  #pi/2          # Phase in radians
phase2 = -3.1416/2  #pi/2          # Phase in radians
sampling_rate = 10000 # Samples per second
duration = 0.1       # Duration in seconds

# Time vector
t = np.linspace(0, duration, int(sampling_rate * duration), endpoint=False)

# Sinusoidal signal
signal0 = amplitude * np.sin(2 * np.pi * frequency * t + phase0)
signal1 = amplitude * np.sin(2 * np.pi * frequency * t + phase1)
signal2 = amplitude * np.sin(2 * np.pi * frequency * t + phase2)

# Plotting
plt.figure(figsize=(14, 6))

plt.subplot(3,1, 1)
plt.plot(t, signal0)
plt.title("Phase = 0")
plt.grid(True)

plt.subplot(3,1, 2)
plt.plot(t, signal1)
plt.title("Phase = 90 deg")
plt.grid(True)

plt.subplot(3,1, 3)
plt.plot(t, signal2)
plt.title("Phase = -90 deg")
plt.grid(True)
plt.xlabel("Time [,s]")
plt.ylabel("Amplitude")
plt.grid(True)
plt.tight_layout()
plt.show()
